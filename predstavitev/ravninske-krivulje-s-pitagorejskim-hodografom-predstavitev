% \begin{frame}
% Ravninska krivulja s PH $r (t) = (x (t), y (t))$ definirana z zamenjavo treh polinomov $u (t), v (t), w (t)$ v izrazih
% 	\begin{eqnarray}\label{eq:3}
% 	x\prime(t) &=& \lbrack u^2(t)-v^2(t)\rbrack w(t)\\
